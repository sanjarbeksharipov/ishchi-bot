# Bot Configuration
BOT_TOKEN=your_bot_token_here
BOT_VERBOSE=false
BOT_POLLER=10s
BOT_CHANNEL_ID=0
BOT_ADMIN_IDS=123456789,987654321
BOT_ADMIN_GROUP_ID=0
BOT_USERNAME=your_bot_username

# Bot Mode: "polling" for local development, "webhook" for production
BOT_MODE=polling
# Webhook settings (only used when BOT_MODE=webhook)
BOT_WEBHOOK_URL=https://yourdomain.com/webhook
BOT_WEBHOOK_LISTEN=:8443
BOT_WEBHOOK_PORT=8443

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_NAME=telegram_bot
DB_MAX_CONNECTIONS=25

# App Configuration
APP_ENV=production
LOG_LEVEL=info

# Payment Configuration
CARD_NUMBER=8600000000000000
CARD_HOLDER_NAME=ADMIN NAME
